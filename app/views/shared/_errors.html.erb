<% if @registrant.errors.any? %>
    <section id="errors">
      <header>
        <h2>
          Oops! Your registration could not be saved.
        </h2>
        <h3>
          Please correct the following
          <%= pluralize(@registrant.errors.count, "error") %>:
        </h3>
      </header>
      <ul>
        <% @registrant.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </section>
  <% end %>